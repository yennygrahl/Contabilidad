<div class="row"  style="margin-top: 20px;">
	<%= form_for :cuenta, :validate => true, html: {class: "form-horizontal verificar"} do |cuenta| %>

	<div class="col-md-1">
	</div>
		<div class="col-md-5">
			<form class="form-horizontal">
				<div class="form-group">
					<div class="col-sm-4 control-label">
						<%= cuenta.label :codigo, raw('<span class="obligatorio">*</span>Codigo')%>
					</div>
	    			<div class="col-sm-8">
	    				<%= cuenta.text_field(:codigo, size:15, maxlength:15, :id => "foco", :required => true, :class => "form-control") %>
	    			</div>
	  			</div>
		  	<div class="form-group">
		  		<div class="col-sm-4 control-label">
		  			<%= cuenta.label :nivel, raw('<span class="obligatorio">*</span>Nivel')%>
		  		</div>
	    			<div class="col-sm-8">
	    				<%= cuenta.text_field(:nivel, size:15, maxlength:15, :required => true, :class => "form-control") %>
	    			</div>
		 	</div>
	  		<div class="form-group">
	  			<div class="col-sm-4 control-label">
	   	 			<%= cuenta.label :tipo_saldo, raw('<span class="obligatorio">*</span>Tipo Saldo')%>
	   	 		</div>
	    			<div class="col-sm-8">
	    				<%= cuenta.text_field(:tipo_saldo, size:15, maxlength:15, :required => true, :class => "form-control") %>
	    			</div>
	  		</div>
		</form>
			

		</div>

		
		<div class="col-md-5">
			<form class="form-horizontal">
				<div class="form-group">
					<div class="col-sm-4 control-label">
						<%= cuenta.label :descripcion, raw('<span class="obligatorio">*</span>Descripcion')%>
	    			</div>
	    			<div class="col-sm-8">
	    				<%= cuenta.text_field(:descripcion, size:15, maxlength:15, :required => true, :class => "form-control") %>
	    			</div>
	  			</div>
		  	<div class="form-group">
		  		<div class="col-sm-4 control-label">
		  			<%= cuenta.label :cuenta_padre, raw('<span class="obligatorio">*</span>Cueta Padre')%>
		  		</div>
	    			<div class="col-sm-8">
	    				<%= cuenta.text_field(:cuenta_padre, size:15, maxlength:15, :required => true, :class => "form-control") %>
	    			</div>
		 	</div>
	  		<div class="form-group">
	  			<div class="col-sm-4 control-label">
	   	 			<%= cuenta.label :imputable, raw('<span class="obligatorio">*</span>Imputable')%>
	   	 		</div>
	    			<div class="col-sm-8" style="margin-top: 10px;">
	    				<%= select_tag 'imputable', options_for_select([["Si", "si"],["No", "no"]], :class => "checkbox-inline") %>
	    			</div>
	  		</div>

		</form>
	<% end %>

		</div>
		<div class="col-md-1">
	</div>
</div>

